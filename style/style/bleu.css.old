* { margin:0; padding:0; }

body
{
	margin-bottom: 25px;
	font-family: Geneva, Arial, Helvetica, sans-serif; 
	font-size: 13px;
	background: url(globe.jpg) 0 0 no-repeat;
	behavior: url(csshover.htc);	/* fichier de comportement pour Win I.E. */	
}
body.popup {
	font-family: Verdana, Geneva, Arial, Helvetica, sans-serif; 
	font-size: 13px;
	background: #F4FCFF;
	padding:10px;
}
textarea,
input,
select,
option {
	font: 12px Georgia, "Courier New", Courier, monospace;
	color: #069;
}
h2 {font-size:16px;}
h3 {font-size:14px;}
.popup h3 {font-size: 14px;}
img {border:0px;}
em {
	font-style: italic;
	color:#69C;
}
hr {
	margin:10px 10px 10px 20px;
	height: 1px;
	color: #888;
}
option {
	padding:0 2px;
}

table {
	font-size: 13px;
}
.meze {
	text-align: center;
	margin-top:5px;
	margin-bottom:5px;
}

.dekstre {
	text-align: right;
	margin:2px;
}
.meze table,
.meze table tr,
.meze table tr td {
	width:auto;
	text-align: center;
	border:solid 1px #ccc;
	border-collapse: collapse;
	padding:2px 10px;
}
table.voca
{
	padding:2px;
	margin: 0px 0px 10px 20px;
	border: 1px solid #ddd;
	background: #F4FCFF;
	font-size:11px;
}

table.voca tr td {
	padding: 2px;
	vertical-align: top;
}
table.lernanto {
	border:none;
	border-collapse:collapse;
	border:solid 1px #888;
	font-size:11px;
	margin-bottom:5px;
}
div.lernanto {
	font-size: 11px;
	margin-bottom: 5px;
	padding:10px;
	position:relative;
}
div.gauche {
	float: left;
}

div.lien {
	display:block;
}
a {
	text-decoration:none;
	color:blue;
}

.note {font-size:11px;}
.eraro {
	font-size: 16px;
	font-weight:bold;
	color: red;
}
.rimarko {
	font-size:11px;
}
/**************************************
 * entete de la page (toute la largeur)
 **************************************/
#kapo
{
	height: 90px;
	background: url(titolo.jpg) 0 0 no-repeat;
	padding-left:0px;
	display:none;
}
#kapo h1 {
	color: #aaa ;
	font-size: 36px;
	padding:20 0 0 50;
	margin-left:4em;
}
#kapo img {
	float:left;
}
/**********************
 * menu principal
 **********************/
#menuo {
body>html	margin-left:5px;
}
#menuo table {
	text-align: center;
}

#menuo table tr td {
	vertical-align: top;
	width: 204px;
	background:#FFF;
	border:solid #ddd 2px;
	voice-family:"\"}\"";
	voice-family:inherit;
	width:200px;
}
html>body #menuo table tr td {
	width:200px;
}
#menuo table tr td.unua {
	vertical-align: center;
	width: 200px;
	/* border:0px; */
	/* border-bottom: 1px dashed #bbb ; */
	/* background:url(planeteH.jpg); */
	/* background:transparent; */
}

#menuo table tr td.unua h1 {
	color: #039 ;
	font-size: 22px ;
	margin:10px 0px;
}

#menuo table tr td h2 {
	font-size:16px;
	border-bottom: solid #ddd 1px;
	background:url(fondbleu.gif);
}

#menuo table tr td p {
	font-size:12px;
}

#menuo table tr td p a {
	color: #888;
	text-decoration:none;
	display: block ;
	width: 200px ;
}
#menuo table tr td p a:hover {
	color: #fff;
	background-color: #ccc;
}
/*
#pagxo {
	background-image: url(fondbleu.gif) repeat-y ;
}
*/
#subpagxo {
	width: 100%;
	float: right;
	margin-left: -200px;
}

#subpagxo h1 {
	margin: 10px;
	margin-left: 210px;
	font-size: 30px;
	color: #888;
}

/*********************************************************
 * menu latéral : liste des cours, tableau des élèves, ...
 *********************************************************
*/
#pagxmenuo {
	width: 200px;
	float: left;
	margin-left:2px;
}
html>body #pagxmenuo {	
	margin-left:5px;
}

#pagxmenuo h2 {
	margin-top:10px;
	height: 20px;
	border:none;
	text-align:center;
	color:#FFF;
	display:block;
	background: #69C;
	font-size:15px;
	font-style:normal;
	-moz-border-radius:15px 0px 0px 0px;
}
#pagxmenuo a {
	text-decoration:none;
	color:#69C;
}
#pagxmenuo h2 a,
#pagxmenuo h2 a.hover {
	color:#FFF;
}
#pagxmenuo h3 {
	font-size:16px;
	margin-top:1px;
	margin-bottom:1px;
	padding:0px;
}
div#pagxmenuo ul {
	margin:0; padding:0;
	width:200px;
	background: white url(fondbleu.gif) repeat-y;
	border:1px solid #69C;
	-moz-border-radius:0px 0px 15px 0px;
	voice-family:"\"}\"";
	voice-family:inherit;
	width:198px;
}
html>body div#pagxmenuo ul {
	width:198px;
}

div#pagxmenuo ul.niv1 li,
div#pagxmenuo ul.niv2 li {
	position:relative;
	list-style:none;
	margin:0;
	font-size: 13px;
	color:#333;
	border-bottom:dashed 1px #69C;
	width:198px;
	height:20px;
	padding-top:2px;
}
div#pagxmenuo ul.niv0 li {
	position:relative;
	list-style:none;
	margin:0;
	font-size: 13px;
	color:#333;
	border-bottom:dashed 1px #69C;
	width:198px;
	padding-top:2px;
}

div#pagxmenuo ul.niv2 li {
	width:198px;
}
div#pagxmenuo li.ligo {
	background: url(triangle.gif) 95% 50% no-repeat;
}
div#pagxmenuo ul.niv0 li.lasta,
div#pagxmenuo ul.niv1 li.lasta,
div#pagxmenuo ul.niv2 li.lasta {
	border-bottom:none;
}
div#pagxmenuo li:hover {
	color: #679BCF;
	font-weight:bold;
}
div#pagxmenuo li a {
	display:block;
	text-decoration:none;
	width:198px;
	color: #333;
	padding-left:18px;
}
div#pagxmenuo ul.niv2 a {
	width:198px;
	padding-left:5px;
}
div#pagxmenuo li:hover a {
	color: #679BCF;
}
div#pagxmenuo>ul.niv2 a {
	width:auto;
}
div#pagxmenuo ul ul {
	position: absolute;
	top:-1px;
	left:198px;
	display:none;
	-moz-border-radius:0px;
}
div#pagxmenuo ul.niv2 ul {
	width:198px;
	position: absolute;
	top:-1px;
	left:198px;
	display:none;
	-moz-border-radius:0px;
}
div#pagxmenuo ul.gerda {
	top:-180px;
}
div#pagxmenuo ul.gerda li {
	height:16px;
}
div#pagxmenuo ul.niv2 a:hover {
	color:#333;
}
div#pagxmenuo ul.niv1 li.ligo:hover ul.niv2,
div#pagxmenuo ul.niv1 li.ligo:hover ul.niv2 ul {
	display:block;
}

#pagxmenuo img {
	text-align: center;
}
#pagxmenuo table {
	border-collapse: collapse;
	font-size: 11px;
	padding:1px;
	text-align:center;
	border:1px solid #69C;
	background:url(fondbleu.gif) repeat-y;
	-moz-border-radius:0px 0px 15px 0px;
}

#pagxmenuo table tr td {
	border:1px solid #69C;
}

#pagxmenuo table tbody tr td.col1 {
	color: #888;
	text-align:left;
	padding:0 0.5em;
}
/*
 * bouton de choix de la methode d'affichage
 */
#pagxmenuo .ne {
	border: solid 1px #FFF;
}
#pagxmenuo .jes {
	border: solid 2px #69C;
}
/**********************************
 * contenu "utile" de la page
 **********************************
 */
#enhavo p, 
#enhavo table,
#enhavo ol {
	font-family: Verdana, Geneva, Arial, Helvetica, sans-serif; 
}
#enhavo {
	margin:10px;
	margin-left:210px;
	color: #333;
}
div#adminejo {
	margin:5px;
	padding:0;
	color: #333;
}
div#adminG {
	width:200px;
	float:left;
	margin:0; padding:0;
}
div#adminG select {
	width:200px;
	font-size:12px;
}
div#adminD {
	margin-left:210px;
	}
#enhavo h2, h3, h4
{
	margin: 10px 10px 10px 0px;
	padding-top: 5px ;
	color: #69C;
	font-size: 24px;
}
#enhavo h3
{
	font-size: 16px;
	border-bottom: 1px solid #bbb ;
}
#enhavo h4
{
	font-size: 14px;
	color: #888;
}

#enhavo p {
	font-family: Verdana, Geneva, Arial, Helvetica, sans-serif; 
	padding: 2px 0px;
}
.encadre
{
	margin:2px;
	padding:2px ;
	border: 1px dashed #bbb;
	font-size:12px;
	background: #F4FCFF;
}
.aligne {
	clear:right;
  	height: 0;
}
/*
 * pied de page
 */
 
.antauxpiedo {
  height: 0;
  clear: both;
}
#piedo {
	clear: both; 
}

/**********************************
 * onglets
 **********************************
 */
#tabnav,
.subnav {
	font-family: Verdana, Geneva, Arial, sans-serif; 
   font-size: 11px;
   list-style-type: none;
   padding-bottom: 24px;
   border-bottom: 1px solid #7B8795;
	list-style-image: none;
	}
	
.subnav {
	display:none;
	border:none;
	position:relative;
	top:-12px;
	left:-12px;
}	
#tabnav li,
.subnav li {
   float: left;
   height: 21px;
   margin: 2px 2px 0 2px;
   border: 1px solid #7B8795;
	background-color: #E3EBFB;
}
.subnav li {
	margin:1px;
}
#tabnav li.aktiva,
.subnav li.aktiva {
   border-bottom: 1px solid #FFF;
   background-color: #FFF;
}

#tabnav li.meze,
.subnav li.meze {
	margin-left: 20px;
}

#tabnav li.dekstre {
	float: right;
   border: 1px solid #7B8795;
}
#tabnav li.dekstraktiva {
	float: right;
   border-bottom: 1px solid #FFF;
   background-color: #FFF;
}

#tabnav a,
.subnav a {
   float: left;
   display: block;
   color: #000;
   text-decoration: none;
   padding: 4px;
}

#tabnav a:hover,
.subnav a:hover {
   background: #FFF;   
}

#kadro {
	   border: 1px solid #7B8795;
	   border-top:none;
	   padding: 15px;
	   background: #FFF;
	font-family: Verdana, Geneva, Arial, Helvetica, sans-serif; 
}
#kadro p {
	margin-left:20px;
}

#kadro h3, h4 {
	margin-left:20px;
}

/*************************************************
 * table de présentation des données personnelles
 *************************************************
 */
table.perso {
	border: 0px;
	text-align:left;
	color: #039;
}
table.perso thead {
	color:#888;
}
table.perso td {
	text-align:left;
	vertical-align: text-top;
	padding:2px;
}

table.perso td.col1 {
	color: #888;
	text-align:right;
}
table.perso p {
	color:#888;
	text-align:left;
}
/**********************************
 * tableau de statistiques
 **********************************
 */
table.stat {
	border: 1px solid #bbb;
	color: #039;
	border-collapse: collapse;
}

table.stat thead {
	color: #000;
	text-align:center;
}

table.stat thead tr td {
	text-align:center;
	border: 1px solid #bbb;
	padding:0 0.5em;
}

table.stat thead tr td.vide{
	text-align:center;
	border: 0;
}
table.stat tbody tr td {
	text-align:center;
	border: 1px solid #bbb;
}

table.stat tbody tr td.col1 {
	color: #888;
	text-align:left;
	padding:0 0.5em;
}

table.stat tbody tr td.dekstre {
	text-align:right;
	padding:0 0.3em;
}

table.stat tfoot {
	color: #888;
	text-align:center;
	font-weight:bold;
	background:#eee;
}

table.stat tfoot tr td {
	border: 1px solid #bbb;
}
/*********************************************
 * tableau de présentation avec bordures fines
 *********************************************
 */

table.prezento {
	border: solid 1px #CCC;
	border-collapse: collapse;
	text-align:left;
	cellpadding:2px;
	cellspacing:5px;
	color: #039;
	background:#FFF;
}

table.prezento tr td {
	padding:2;
	text-align:left;
	vertical-align: text-top;
	border: solid 1px #CCC;
}

table.prezento h2,
table.prezento h3 {
	padding-top: 0;
	margin-top:0;
	text-align:center;
}
table.prezento h2 a,
table.prezento h3 a {
	text-decoration: none;
	color: #888;
}
table.prezento h4 {
	font-weight:normal;
	color: #888;
}
table.prezento img {
	text-align:center;
	border:1px;
	border-color: #7B8795;
}
table.prezento td.txt {
	color:#000;	
}
table.prezento form {
	text-align:center;
}
table.hejmo h3 {
	background: white url(fondbleu.gif) repeat-y;
	display:block;
}
table.prezento h4 {
	font-size:12px;
}
table.hejmo p {
	text-align:justify;
	margin:2px 10px;
	font-size:11px;
}
/**********************************
 * liste des élèves
 **********************************
 */
div.lernantoj {
	border:1px solid #888;
	margin-bottom:10px;
	width:100%;
	position:relative;
}
div.lernantoj div.nomo {
	height:35px; 
	background: #E3EBFB;
	border-bottom:1px solid #888;
}
div.nomo img {
	padding:0 5px;
}
div.nomo p {
	padding-top:9px;
}
div.tagoj {
	width:35px; 
	height:35px;
	padding:0; 
	float:left; 
	font-size:14px; 
	font-weight:bold; 
	text-align:center; 
	background: #E3EBFB;
}
div.lernantoj em {
	font-style:normal;
}
/**********************************
 *        pages de cours
 **********************************
 */

.rakonto {
	display:block;
	padding:10px 10% 10px 5%;
}
.rakonto a,
.klarigo a {
	font-weight:bold;
	text-decoration:underline;
	color:#000;
}
.rakonto a:hover,
.klarigo a:hover {
	color:#69C;
}
.rakonto h4 a {
	text-decoration:none;
	color: #888;
}
.lasu {
	padding:10px 100px 10px 60px;
}
.lasu a {
	vertical-align: super;
	font-size: 10px;
}
.rakonto img {
	float: right;
	vertical-align: text-top;
	margin: 5px;
}
.rakonto .onglet a {
	vertical-align: baseline;
	font-size: 14px;
	color: #888;
	border:solid 1px #888;
	padding:2px;
}
.rakonto h2 {
	text-align: center;
}
.rakonto p {
	line-height:1.5;
	font-size:12px;
	text-align: justify;
}
.rakonto p.citajxo {
	text-align:left;
	margin-left: 50px;
}
.rakonto ol,
.rakonto ul {
	line-height:1.5;
	font-size:13px;
	margin-left:50px;
	text-align: left;
}
.rakonto ul {
	list-style-image: url(triangle.gif);
}
.klarigo ul {
	line-height:1.5;
	font-size:13px;
	margin-left:50px;
	text-align: left;
	list-style-image: url(triangle.gif);
}
.klarigo li {
	padding-bottom:5px;
}
.klarigo ul li a {
	color:#000;
	text-decoration:none;
	display:block;
}
.klarigo ul li a:hover {
	background:#CCC;
}
.klarigo ul.sommaire {
	margin-left: 50px;
	line-height:1.5;
	font-size:12px;
	font-family: Verdana, Geneva, Arial, Helvetica, sans-serif; 
}
.klarigo ul.sommaire li {
	list-style-image:"http://ikurso.esperanto-jeunes.org/bildoj/triangle.gif";
}
.klarigo ul.cadre li {
	width: 200px;
}

.klarigo ol  {
	margin-left: 50px;
}

.klarigo p {
	line-height:1.5;
}
.klarigo textarea {
	margin-left: 10px;
	padding: 5 px;
}

